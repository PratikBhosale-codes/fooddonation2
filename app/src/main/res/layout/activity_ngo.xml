<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO Food Collection"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editNgoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NGO Name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"/>


        <EditText
            android:id="@+id/editAgentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agent Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/editContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/editFoodItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Items Collected"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"/>
       <!-- <EditText
            android:id="@+id/editFoodItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adhar card no"
            android:inputType="numberPassword"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"/>-->

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 0"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <SeekBar
            android:id="@+id/seekQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:layout_marginTop="12dp"
            />

        <Button
            android:id="@+id/btnNgoSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#ff9800"
            android:textColor="@android:color/black"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</ScrollView>
